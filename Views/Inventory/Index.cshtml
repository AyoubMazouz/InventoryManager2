@model IEnumerable<InventoryManager2.Models.Item>

@{
    ViewData["Title"] = "Index";

    if (TempData["successMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["successMessage"]
        </div>
    }
    else if (TempData["errorMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["errorMessage"]
        </div>
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemDetail.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemDetail.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemDetail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ItemDetail.Price)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ItemDetail.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ItemDetail.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="ItemDetails" asp-route-id="@item.Id">ItemDetails</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
